<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ca.tetervak.donutdata3.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_home_to_new_donut"
            app:destination="@id/nav_new_donut" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="ca.tetervak.donutdata3.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/gallery_fragment" />

    <fragment
        android:id="@+id/nav_donut_list"
        android:name="ca.tetervak.donutdata3.ui.donutlist.DonutListFragment"
        android:label="@string/fragment_donut_list"
        tools:layout="@layout/donut_list_fragment">
        <action
            android:id="@+id/action_list_to_entry"
            app:destination="@id/donutEntryFragment" />
        <action
            android:id="@+id/action_list_to_confirmationDialog"
            app:destination="@id/confirmationDialog" />
        <action
            android:id="@+id/action_donut_list_to_new_donut"
            app:destination="@id/nav_new_donut" />
    </fragment>

    <fragment
        android:id="@+id/donutEntryFragment"
        android:name="ca.tetervak.donutdata3.ui.donutentry.DonutEntryFragment"
        android:label="@string/fragment_donut_entry"
        tools:layout="@layout/donut_entry_fragment">
        <argument
            android:name="donutId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_entry_to_list"
            app:destination="@id/nav_donut_list" />
    </fragment>

    <dialog
        android:id="@+id/aboutDialog"
        android:name="ca.tetervak.donutdata3.ui.dialogs.AboutDialog"
        android:label="AboutDialog" />
    <action android:id="@+id/action_global_about" app:destination="@id/aboutDialog" />
    <dialog
        android:id="@+id/confirmationDialog"
        android:name="ca.tetervak.donutdata3.ui.dialogs.ConfirmationDialog"
        android:label="ConfirmationDialog"
        tools:layout="@layout/confirmation_dialog">
        <argument
            android:name="message"
            app:argType="string" />
        <argument
            android:name="requestCode"
            app:argType="integer" />
        <argument
            android:name="itemId"
            app:argType="string"
            app:nullable="true" />
    </dialog>
    <fragment
        android:id="@+id/imageListFragment"
        android:name="ca.tetervak.donutdata3.ui.imagelist.ImageListFragment"
        android:label="@string/fragment_image_list" />
    <fragment
        android:id="@+id/nav_wikipedia"
        android:name="ca.tetervak.donutdata3.ui.wikipedia.WikiFragment"
        android:label="@string/fragment_wikipedia"
        tools:layout="@layout/wiki_fragment" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="ca.tetervak.donutdata3.ui.settings.SettingsFragment"
        android:label="@string/fragment_settings" />
    <action
        android:id="@+id/action_global_donut_list"
        app:destination="@id/nav_donut_list"
        app:popUpTo="@id/nav_donut_list"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/nav_new_donut"
        android:name="ca.tetervak.donutdata3.ui.newdonut.NewDonutFragment"
        android:label="@string/fragment_new_donut"
        tools:layout="@layout/new_donut_fragment" />
</navigation>